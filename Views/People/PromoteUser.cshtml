@model PlannerUser

@{
    ViewBag.Title = "Promote User";
    Layout = "_Layout";
}

<h1>Make Faculty</h1>

<h4>Make @Model.Name a Faculty</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PromoteUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <p>Are you sure you want to make @Model.Name a faculty member?</p>
            <div class="form-group">
                <input type="submit" value="Yes" class="btn btn-primary danger-text"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Students">Back to List</a>
</div>