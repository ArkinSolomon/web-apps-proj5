@model AssignFacultyViewModel

@{
    ViewBag.Title = "Change Faculty";
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>Assign Advisor to @Model.Student.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeFaculty" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" value="@Model.Student.Id"/>
            <div class="form-group">
                <label asp-for="AssignedFacultyId" class="control-label"></label>
                <select asp-for="AssignedFacultyId" asp-items="@Model.FacultyList" class="form-control"></select>
                <span asp-validation-for="AssignedFacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Students">Back to List</a>
</div>

