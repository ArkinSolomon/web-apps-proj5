@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="input-wrapper">
        <span asp-validation-for="Input.Name" class="text-danger"></span>
        <label asp-for="Input.Name">Name</label>
        <input asp-for="Input.Name" autocomplete="name" aria-required="true" placeholder="Your Name"/>
    </div>

    <div class="input-wrapper">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" autocomplete="email" aria-required="true" placeholder="name@example.com"/>
    </div>

    <div class="input-wrapper">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="password"/>
    </div>
    <div class="input-wrapper">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="password"/>
    </div>
    <div class="input-wrapper">
      <input type="submit" id="submit-button" value="Register"/>
    </div>
</form>
<div>
    <p>
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in instead</a>
    </p>
</div>